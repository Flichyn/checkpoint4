{% extends 'base.html.twig' %}
{% block stylesheet %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}
{% block body %}
    <main>
        <div class="mt-0 mb-5 d-flex align-items-center justify-content-center">
            <h1 class="text-center text-primary mt-5 d-flex align-self-center">Contact</h1>
        </div>
        <div class="container bg-primary-custom my-5 py-4">
            <h2 class="text-center align-self-center py-3">Envoyez-nous un message !</h2>
            <div class="py-4">
                <div class="pb-4">
                    <p class="text-center">Si vous avez une sugestion à nous faire, des retours d'expérience, des bugs à faire remonter, ou une toute autre raison qui
                        vous semble pertinente, n'hésitez pas !</p>
                    <hr>
                </div>

                <div class="container">
                    <h3>Formulaire</h3>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="text-center mt-5">
                        <button class="btn-fancy">Envoyer</button>
                    </div>
                    {{ form_end(form) }}
                </div>

            </div>
        </div>
    </main>
{% endblock %}
