{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | Vos groupes{% endblock %}
{% block stylesheet %}
    {{ parent() }}
    {{ encore_entry_link_tags('group') }}
{% endblock %}
{% block body %}
    <main>
        <div class="mt-0 mb-5 d-flex align-items-center justify-content-center">
            <h1 class="text-center text-primary mt-5 d-flex align-self-center">Vos groupes</h1>
        </div>
        <div class="container bg-primary-custom my-5 py-4">
            <h2 class="text-center align-self-center py-3">Table de vos groupes</h2>
            <a class="btn btn-fancy text-primary m-2 p-2 ml-2 text-center btn-transform" href="{{ path('group_new') }}">Ajouter</a>
            <div class="py-4">
                <div class="table-responsive"></div>
                <table class="table table-striped">
                    <thead class="bg-secondary text-light">
                    <tr>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for group in groups %}
                        <tr>
                            <td>{{ group.name }}</td>
                            <td>
                                <div class="row">
                                    <a class="text-primary btn-fancy" href="{{ path('group_show', {'id': group.id}) }}">Voir</a>
                                    <a class="text-primary btn-fancy"
                                       href="{{ path('group_edit', {'id': group.id}) }}">Éditer</a>
                                    {{ include('group/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Aucune donnée trouvée.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
{% endblock %}
